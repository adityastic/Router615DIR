<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="80dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
    <item
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff6200ea" android:endColor="#ff2979ff" android:angle="135.0" />
            <corners android:radius="80dp" />
        </shape>
    </item>
</layer-list>